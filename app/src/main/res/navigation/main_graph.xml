<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_graph"
    app:startDestination="@id/welcomeFragment">

    <fragment
        android:id="@+id/welcomeFragment"
        android:name="com.gaziev.pokemons.ui.screens.WelcomeFragment"
        android:label="WelcomeFragment" >
        <action
            android:id="@+id/action_welcomeFragment_to_pokemonsFragment"
            app:destination="@id/pokemonsFragment" />
    </fragment>
    <fragment
        android:id="@+id/pokemonsFragment"
        android:name="com.gaziev.pokemons.ui.screens.pokemons.PokemonsFragment"
        android:label="PokemonsFragment" >
        <action
            android:id="@+id/action_pokemonsFragment_to_cardFragment"
            app:destination="@id/cardFragment" />
    </fragment>
    <fragment
        android:id="@+id/favoriteFragment"
        android:name="com.gaziev.pokemons.ui.screens.favorites.FavoritesFragment"
        android:label="FavoriteFragment" />
    <activity
        android:id="@+id/mainActivity"
        android:name="com.gaziev.pokemons.ui.MainActivity"
        android:label="activity_main"
        tools:layout="@layout/activity_main" />
    <fragment
        android:id="@+id/cardFragment"
        android:name="com.gaziev.pokemons.ui.screens.CardFragment"
        android:label="CardFragment" />
</navigation>